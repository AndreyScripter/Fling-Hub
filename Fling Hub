local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local rootPart = character:FindFirstChild("HumanoidRootPart")

if not rootPart then
    warn("Nu s-a găsit HumanoidRootPart!")
    return
end

-- Salvăm poziția inițială pentru a reveni după fling
local initialPosition = rootPart.Position

-- Funcție pentru a arunca un jucător
local function flingTarget(target)
    local targetRoot = target:FindFirstChild("HumanoidRootPart")
    
    if targetRoot then
        -- Salvăm coliziunile inițiale
        local oldCollision = rootPart.CanCollide

        -- Atașăm playerul nostru de celălalt player
        rootPart.CFrame = targetRoot.CFrame
        rootPart.Anchored = false
        rootPart.CanCollide = true

        -- Adăugăm o forță de fling puternică
        local bodyVelocity = Instance.new("BodyVelocity")
        bodyVelocity.Velocity = Vector3.new(math.random(-100, 100), 500, math.random(-100, 100)) -- Forță haotică
        bodyVelocity.MaxForce = Vector3.new(500000, 500000, 500000) -- Super forță
        bodyVelocity.Parent = rootPart

        -- Așteptăm puțin pentru efectul de fling
        wait(0.2)

        -- Resetăm jucătorul la poziția inițială
        bodyVelocity:Destroy()
        rootPart.CFrame = CFrame.new(initialPosition)
        rootPart.CanCollide = oldCollision
    end
end

-- Execută Fling pentru toți jucătorii
for _, v in pairs(game.Players:GetPlayers()) do
    if v ~= player and v.Character then
        flingTarget(v.Character)
    end
end